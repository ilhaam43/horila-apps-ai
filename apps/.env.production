# Production Environment Configuration
# Optimasi Performa untuk Production

# Security Settings
DEBUG=False
SECRET_KEY=django-insecure-production-key-change-this-in-real-deployment

# Allowed Hosts
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,http://localhost:8000

# Database Configuration (SQLite untuk development, gunakan PostgreSQL untuk production)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=TestDB_Horilla.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# Timezone
TIME_ZONE=Asia/Jakarta

# Performance Settings
DJANGO_SETTINGS_MODULE=horilla.settings

# Logging Level
LOG_LEVEL=WARNING

# Static Files (untuk production dengan CDN)
# STATIC_URL=https://cdn.your-domain.com/static/
# MEDIA_URL=https://cdn.your-domain.com/media/

# Email Configuration (untuk production)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Redis Configuration (untuk production caching)
# REDIS_URL=redis://localhost:6379/1

# Celery Configuration (untuk background tasks)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0