# RAG System Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# Vector Database Configuration
VECTOR_DB_PROVIDER=chromadb
VECTOR_DB_COLLECTION=recruitment_candidates
VECTOR_DB_PERSIST_DIR=./data/chromadb
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Pinecone Configuration (if using Pinecone instead of ChromaDB)
# PINECONE_API_KEY=your_pinecone_api_key
# PINECONE_ENVIRONMENT=your_pinecone_environment
# PINECONE_INDEX_NAME=recruitment-index

# LLM Configuration
LLM_PROVIDER=ollama
LLM_MODEL=llama2
OLLAMA_BASE_URL=http://localhost:11434
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2048

# OpenAI Configuration (if using OpenAI instead of Ollama)
# OPENAI_API_KEY=your_openai_api_key

# HuggingFace Configuration (if using HuggingFace models)
# HF_TOKEN=your_huggingface_token

# Document Processing Configuration
MAX_FILE_SIZE_MB=10
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Search Configuration
SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=10

# N8N Configuration
N8N_BASE_URL=http://localhost:5678
N8N_AUTH_TOKEN=your_n8n_auth_token
N8N_WEBHOOK_SECRET=recruitment_webhook_secret

# Cache Configuration
CACHE_TTL_HOURS=24
ENABLE_CACHE=true

# Celery Configuration for Async Processing
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Indonesian NLP Configuration
INDONESIAN_NLP_MODEL_PATH=./models/indonesian_nlp
INDONESIAN_NLP_CACHE_SIZE=1000

# Logging Configuration
LOG_LEVEL=INFO
RAG_LOG_FILE=./logs/rag_system.log
N8N_LOG_FILE=./logs/n8n_integration.log

# Security Configuration
WEBHOOK_SECURITY_ENABLED=true
RATE_LIMITING_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Development/Production Settings
DEBUG_RAG=false
ENABLE_RAG_METRICS=true
ENABLE_PERFORMANCE_MONITORING=true